{
  "manifest_version": 3,
  "name": "YouTube Transcript Tester",
  "version": "1.0",
  "description": "Test transcript extraction",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
